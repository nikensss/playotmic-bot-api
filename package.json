{
  "name": "playtomic-bot-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "prisma:dev:deploy": "prisma migrate deploy && prisma generate",
    "db:dev:rm": "docker compose rm playtomic-bot-db -s -f -v",
    "db:dev:up": "docker compose up playtomic-bot-db -d",
    "db:dev:restart": "npm run db:dev:rm && npm run db:dev:up && sleep 2 && npm run prisma:dev:deploy",
    "prisma:test:deploy": "dotenv -e .env.test -- prisma migrate deploy && prisma generate",
    "db:test:rm": "docker compose rm playtomic-bot-db-test -s -f -v",
    "db:test:up": "docker compose up playtomic-bot-db-test -d",
    "db:test:restart": "npm run db:test:rm && npm run db:test:up && sleep 2 && npm run prisma:test:deploy",
    "format": "npm run prettier -- --write",
    "format:check": "npm run prettier -- --check",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prebuild": "rimraf dist",
    "prepare": "husky install",
    "prettier": "prettier \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start -e \"ts-node -r dotenv/config\"",
    "start:debug": "nest start --debug --watch -e \"ts-node -r dotenv/config\"",
    "start:dev": "nest start --watch -e \"ts-node -r dotenv/config\"",
    "start:prod": "node -r dotenv/config dist/main",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pretest:e2e": "npm run db:test:restart",
    "test:e2e": "dotenv -e .env.test -- jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "update:nest": "cat package.json | jq --raw-output '{ dependencies, devDependencies } | .[] | keys | .[]' | grep nest | xargs -I _ echo _@latest | xargs npm i"
  },
  "dependencies": {
    "@fastify/static": "6.5.0",
    "@nestjs/common": "9.2.0",
    "@nestjs/config": "2.2.0",
    "@nestjs/core": "9.2.0",
    "@nestjs/jwt": "9.0.0",
    "@nestjs/passport": "9.0.0",
    "@nestjs/platform-fastify": "9.2.0",
    "@nestjs/swagger": "6.1.3",
    "@prisma/client": "4.6.1",
    "argon2": "0.28.5",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "cls-proxify": "2.0.0",
    "dotenv": "16.0.1",
    "fastify": "4.9.2",
    "fastify-swagger": "5.2.0",
    "passport": "0.6.0",
    "passport-jwt": "4.0.0",
    "pino": "8.0.0",
    "pino-pretty": "8.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.2.0",
    "uuid": "8.3.2",
    "zod": "3.19.1"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.2",
    "@commitlint/config-conventional": "17.0.2",
    "@nestjs/cli": "9.1.5",
    "@nestjs/schematics": "9.0.3",
    "@nestjs/testing": "9.2.0",
    "@types/express": "4.17.13",
    "@types/jest": "27.5.0",
    "@types/node": "18.11.9",
    "@types/passport-jwt": "3.0.6",
    "@types/supertest": "2.0.11",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "dotenv-cli": "6.0.0",
    "eslint": "8.0.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "8.0.1",
    "jest": "28.0.3",
    "pactum": "3.3.0",
    "prettier": "2.3.2",
    "prisma": "4.6.1",
    "source-map-support": "0.5.20",
    "supertest": "6.1.3",
    "ts-jest": "28.0.1",
    "ts-loader": "9.2.3",
    "ts-node": "10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
